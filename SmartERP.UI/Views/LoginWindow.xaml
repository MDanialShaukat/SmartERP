<Window x:Class="SmartERP.UI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmartERP - Login"
        Height="400"
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="0,-42,-63,-6">
        <Border Background="White"
                Margin="0,0,60,0"
                CornerRadius="10"
                BorderThickness="1"
                BorderBrush="#DDDDDD" Height="441" VerticalAlignment="Top">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" 
                                  ShadowDepth="3" 
                                  Opacity="0.3"/>
            </Border.Effect>

            <StackPanel Margin="40">
                <TextBlock Text="SmartERP"
                          FontSize="28"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Foreground="#007ACC"
                          Margin="0,0,0,10"/>

                <TextBlock Text="Business Management System"
                          FontSize="14"
                          HorizontalAlignment="Center"
                          Foreground="#666666"
                          Margin="0,0,0,30"/>

                <TextBlock Text="Username"
                          FontSize="12"
                          FontWeight="SemiBold"
                          Margin="0,0,0,5"/>

                <TextBox x:Name="UsernameTextBox"
                        Margin="0,0,0,15"/>

                <TextBlock Text="Password"
                          FontSize="12"
                          FontWeight="SemiBold"
                          Margin="0,0,0,5"/>

                <PasswordBox x:Name="PasswordBox"
                            Margin="0,0,0,20"/>

                <TextBlock x:Name="ErrorMessageText"
                          Text=""
                          Foreground="Red"
                          FontSize="12"
                          Margin="0,0,0,15"
                          TextAlignment="Center"
                          Visibility="Collapsed"/>

                <Button Content="Login"
                       Click="LoginButton_Click"
                       Margin="0,0,0,10"/>

                <TextBlock HorizontalAlignment="Center"
                          Margin="0,20,0,0"
                          FontSize="11"
                          Foreground="#999999">
                    <Run Text="Default Admin: admin / admin123"/>
                    <LineBreak/>
                    <Run Text="Default User: employee / employee123"/>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
