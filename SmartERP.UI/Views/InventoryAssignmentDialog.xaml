<Window x:Class="SmartERP.UI.Views.InventoryAssignmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assign Inventory Item"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="SaveButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#757575"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#007ACC" 
                Padding="20,15">
            <TextBlock x:Name="DialogTitle"
                      Text="Assign Inventory Item"
                      FontSize="20"
                      FontWeight="Bold"
                      Foreground="White"/>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="30,20">
            <StackPanel>
                <!-- Item Name (Read-only) -->
                <TextBlock Text="Item Name" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="ItemNameTextBox" 
                        IsReadOnly="True"
                        Background="#F0F0F0"
                        Margin="0,0,0,15"/>

                <!-- Available Quantity (Read-only) -->
                <TextBlock Text="Available Quantity" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="AvailableQuantityTextBox" 
                        IsReadOnly="True"
                        Background="#F0F0F0"
                        Margin="0,0,0,15"
                        FontWeight="Bold"
                        Foreground="#2E7D32"/>

                <!-- Assign To User -->
                <TextBlock Text="Assign To User *" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="AssignToUserComboBox"
                         Margin="0,0,0,15"
                         DisplayMemberPath="FullName"/>

                <!-- Quantity to Assign -->
                <TextBlock Text="Quantity to Assign *" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="QuantityToAssignTextBox"
                        Margin="0,0,0,15"
                        TextChanged="QuantityToAssignTextBox_TextChanged"/>

                <!-- Remarks -->
                <TextBlock Text="Remarks" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="RemarksTextBox" 
                        Height="80"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalContentAlignment="Top"
                        Margin="0,0,0,15"/>

                <!-- Summary Section -->
                <Border Background="#E3F2FD" 
                       BorderBrush="#2196F3" 
                       BorderThickness="1"
                       CornerRadius="5"
                       Padding="15"
                       Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Assignment Summary" 
                                  FontSize="14"
                                  FontWeight="Bold"
                                  Foreground="#1976D2"
                                  Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Assigning:" 
                                          Foreground="#666666"
                                          FontSize="12"/>
                                <TextBlock x:Name="SummaryQuantityTextBlock"
                                          Text="0" 
                                          Foreground="#2E7D32"
                                          FontSize="16"
                                          FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Will Remain:" 
                                          Foreground="#666666"
                                          FontSize="12"/>
                                <TextBlock x:Name="SummaryRemainingTextBlock"
                                          Text="0" 
                                          Foreground="#D32F2F"
                                          FontSize="16"
                                          FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" 
                Background="White"
                BorderThickness="0,1,0,0"
                BorderBrush="#E0E0E0"
                Padding="20,15">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right">
                <Button Content="✔ Assign" 
                       Style="{StaticResource SaveButtonStyle}"
                       Click="AssignButton_Click"/>
                <Button Content="❌ Cancel" 
                       Style="{StaticResource CancelButtonStyle}"
                       Click="CancelButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
