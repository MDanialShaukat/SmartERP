<Window x:Class="SmartERP.UI.Views.ReportViewerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Report Viewer"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ExportButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#757575"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#007ACC" 
                Padding="20,15">
            <TextBlock x:Name="ReportTitle"
                      Text="Report Viewer"
                      FontSize="20"
                      FontWeight="Bold"
                      Foreground="White"/>
        </Border>

        <!-- Filter Section -->
        <Border Grid.Row="1" 
                Background="White" 
                Padding="20"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0">
            <StackPanel x:Name="FilterPanel" Orientation="Horizontal">
                <!-- Date Range Filter -->
                <StackPanel x:Name="DateRangePanel" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="From:" 
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"
                              FontSize="13"/>
                    <DatePicker x:Name="FromDatePicker"
                               Width="130"
                               Margin="0,0,15,0"/>
                    
                    <TextBlock Text="To:" 
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"
                              FontSize="13"/>
                    <DatePicker x:Name="ToDatePicker"
                               Width="130"
                               Margin="0,0,15,0"/>
                </StackPanel>

                <!-- Month/Year Filter -->
                <StackPanel x:Name="MonthYearPanel" Orientation="Horizontal" Margin="0,0,20,0" Visibility="Collapsed">
                    <TextBlock Text="Month:" 
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"
                              FontSize="13"/>
                    <ComboBox x:Name="MonthComboBox" Width="120" Margin="0,0,15,0">
                        <ComboBoxItem Content="January" Tag="1"/>
                        <ComboBoxItem Content="February" Tag="2"/>
                        <ComboBoxItem Content="March" Tag="3"/>
                        <ComboBoxItem Content="April" Tag="4"/>
                        <ComboBoxItem Content="May" Tag="5"/>
                        <ComboBoxItem Content="June" Tag="6"/>
                        <ComboBoxItem Content="July" Tag="7"/>
                        <ComboBoxItem Content="August" Tag="8"/>
                        <ComboBoxItem Content="September" Tag="9"/>
                        <ComboBoxItem Content="October" Tag="10"/>
                        <ComboBoxItem Content="November" Tag="11"/>
                        <ComboBoxItem Content="December" Tag="12"/>
                    </ComboBox>
                    
                    <TextBlock Text="Year:" 
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"
                              FontSize="13"/>
                    <ComboBox x:Name="YearComboBox" Width="100" Margin="0,0,15,0"/>
                </StackPanel>

                <!-- Area Filter for Monthly Billing Report -->
                <StackPanel x:Name="AreaFilterPanel" Orientation="Horizontal" Margin="0,0,20,0" Visibility="Collapsed">
                    <TextBlock Text="Area:" 
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"
                              FontSize="13"/>
                    <ComboBox x:Name="ReportAreaComboBox" 
                             Width="150"
                             DisplayMemberPath="AreaName"
                             SelectedValuePath="Id"
                             Margin="0,0,15,0"/>
                </StackPanel>

                <Button Content="Generate Report"
                       Style="{StaticResource ActionButtonStyle}"
                       Click="GenerateReport_Click"/>
                
                <Button Content="Export to CSV"
                       Style="{StaticResource ExportButtonStyle}"
                       Click="ExportToCSV_Click"/>
            </StackPanel>
        </Border>

        <!-- Report Content -->
        <ScrollViewer Grid.Row="2" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="20">
            <StackPanel>
                <!-- Report Summary -->
                <Border x:Name="SummaryPanel"
                       Background="White"
                       BorderBrush="#E0E0E0"
                       BorderThickness="1"
                       CornerRadius="5"
                       Padding="20"
                       Margin="0,0,0,20"
                       Visibility="Collapsed">
                    <StackPanel x:Name="SummaryContent"/>
                </Border>

                <!-- Report Data Grid -->
                <Border Background="White"
                       BorderBrush="#E0E0E0"
                       BorderThickness="1"
                       CornerRadius="5"
                       Padding="0">
                    <DataGrid x:Name="ReportDataGrid"
                             AutoGenerateColumns="False"
                             IsReadOnly="True"
                             Background="White"
                             BorderBrush="#E0E0E0"
                             BorderThickness="0"
                             RowBackground="White"
                             AlternatingRowBackground="#F9F9F9"
                             GridLinesVisibility="Horizontal"
                             HorizontalGridLinesBrush="#E0E0E0"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             SelectionMode="Single"
                             SelectionUnit="FullRow"
                             HeadersVisibility="Column"
                             FontSize="13">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#007ACC"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                <Setter Property="BorderBrush" Value="#005A9E"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>
                </Border>

                <!-- Status Text -->
                <TextBlock x:Name="StatusText"
                          Text="Click 'Generate Report' to view data"
                          FontSize="14"
                          Foreground="#666666"
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Bar -->
        <Border Grid.Row="3" 
                Background="White"
                BorderThickness="0,1,0,0"
                BorderBrush="#E0E0E0"
                Padding="20,15">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right">
                <TextBlock x:Name="RecordCountText"
                          Text="Total Records: 0"
                          FontSize="13"
                          Foreground="#666666"
                          VerticalAlignment="Center"
                          Margin="0,0,20,0"/>
                
                <Button Content="Print"
                       Style="{StaticResource ActionButtonStyle}"
                       Click="Print_Click"/>
                
                <Button Content="Close" 
                       Style="{StaticResource CloseButtonStyle}"
                       Click="Close_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
