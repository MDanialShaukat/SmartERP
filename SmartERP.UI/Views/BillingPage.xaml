<Page x:Class="SmartERP.UI.Views.BillingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartERP.UI.Views"
      xmlns:conv="clr-namespace:SmartERP.UI.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BillingPage">

    <Page.Resources>
        <conv:PaymentMethodDisplayConverter x:Key="PaymentMethodDisplayConverter"/>

        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- DataGrid Header Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#005A9E"/>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AddButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#D32F2F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FilterButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FF9800"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F57C00"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filter Bar -->
        <Border Grid.Row="0" 
                Background="White" 
                Padding="20,15"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Filter Options -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Filter:" 
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"
                              FontSize="14"
                              FontWeight="SemiBold"/>
                    
                    <ComboBox x:Name="StatusFilterComboBox"
                             Width="150"
                             Height="35"
                             Margin="0,0,10,0"
                             VerticalContentAlignment="Center"
                             SelectionChanged="StatusFilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="All Bills" IsSelected="True"/>
                        <ComboBoxItem Content="Pending"/>
                        <ComboBoxItem Content="Paid"/>
                        <ComboBoxItem Content="Partial"/>
                        <ComboBoxItem Content="Overdue"/>
                    </ComboBox>

                    <ComboBox x:Name="MonthFilterComboBox"
                             Width="120"
                             Height="35"
                             Margin="0,0,10,0"
                             VerticalContentAlignment="Center"
                             SelectionChanged="MonthFilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="All Months" IsSelected="True"/>
                        <ComboBoxItem Content="January" Tag="1"/>
                        <ComboBoxItem Content="February" Tag="2"/>
                        <ComboBoxItem Content="March" Tag="3"/>
                        <ComboBoxItem Content="April" Tag="4"/>
                        <ComboBoxItem Content="May" Tag="5"/>
                        <ComboBoxItem Content="June" Tag="6"/>
                        <ComboBoxItem Content="July" Tag="7"/>
                        <ComboBoxItem Content="August" Tag="8"/>
                        <ComboBoxItem Content="September" Tag="9"/>
                        <ComboBoxItem Content="October" Tag="10"/>
                        <ComboBoxItem Content="November" Tag="11"/>
                        <ComboBoxItem Content="December" Tag="12"/>
                    </ComboBox>

                    <ComboBox x:Name="YearFilterComboBox"
                             Width="100"
                             Height="35"
                             Margin="0,0,10,0"
                             VerticalContentAlignment="Center"
                             SelectionChanged="YearFilterComboBox_SelectionChanged"/>

                    <ComboBox x:Name="AreaFilterComboBox"
                             Width="150"
                             Height="35"
                             Margin="0,0,10,0"
                             VerticalContentAlignment="Center"
                             DisplayMemberPath="AreaName"
                             SelectedValuePath="Id"
                             SelectionChanged="AreaFilterComboBox_SelectionChanged"/>
                    
                    <Button Content="ðŸ” Apply"
                           Style="{StaticResource FilterButtonStyle}"
                           Click="ApplyFiltersButton_Click"/>
                </StackPanel>

                <!-- Summary Stats -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Border Background="#4CAF50" 
                           Padding="15,8" 
                           CornerRadius="5"
                           Margin="5,0">
                        <StackPanel>
                            <TextBlock Text="Total Paid" 
                                      Foreground="White" 
                                      FontSize="10"
                                      HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TotalPaidText" 
                                      Text="Rs. 0.00" 
                                      Foreground="White" 
                                      FontSize="14"
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#FF9800" 
                           Padding="15,8" 
                           CornerRadius="5"
                           Margin="5,0">
                        <StackPanel>
                            <TextBlock Text="Pending" 
                                      Foreground="White" 
                                      FontSize="10"
                                      HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TotalPendingText" 
                                      Text="Rs. 0.00" 
                                      Foreground="White" 
                                      FontSize="14"
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#D32F2F" 
                           Padding="15,8" 
                           CornerRadius="5"
                           Margin="5,0">
                        <StackPanel>
                            <TextBlock Text="Overdue" 
                                      Foreground="White" 
                                      FontSize="10"
                                      HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TotalOverdueText" 
                                      Text="Rs. 0.00" 
                                      Foreground="White" 
                                      FontSize="14"
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Search and Action Bar -->
        <Border Grid.Row="1" 
                Background="White" 
                Padding="20,15"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Search:" 
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"
                              FontSize="14"/>
                    <TextBox x:Name="SearchTextBox"
                            Width="300"
                            Height="40"
                            Padding="10"
                            FontSize="13"
                            VerticalContentAlignment="Center"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            KeyDown="SearchTextBox_KeyDown"/>
                    <Button Content="ðŸ” Search"
                           Style="{StaticResource ActionButtonStyle}"
                           Margin="10,0,0,0"
                           Click="SearchButton_Click"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="AddButton"
                           Content="âž• Add Bill"
                           Style="{StaticResource AddButtonStyle}"
                           Click="AddButton_Click"/>
                    <Button x:Name="EditButton"
                           Content="âœï¸ Edit"
                           Style="{StaticResource ActionButtonStyle}"
                           Click="EditButton_Click"/>
                    <Button x:Name="DeleteButton"
                           Content="ðŸ—‘ï¸ Delete"
                           Style="{StaticResource DeleteButtonStyle}"
                           Click="DeleteButton_Click"/>
                    <Button x:Name="RefreshButton"
                           Content="ðŸ”„ Refresh"
                           Style="{StaticResource ActionButtonStyle}"
                           Click="RefreshButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="2" 
                Background="White"
                Margin="20"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="5">
            <DataGrid x:Name="BillingDataGrid"
                     Margin="0"
                     SelectionChanged="BillingDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                       Binding="{Binding Id}" 
                                       Width="50"
                                       IsReadOnly="True"/>
                    
                    <DataGridTextColumn Header="Bill Number" 
                                       Binding="{Binding BillNumber}" 
                                       Width="140"/>
                    
                    <DataGridTextColumn Header="Customer" 
                                       Binding="{Binding Customer.CustomerName}" 
                                       Width="*"
                                       MinWidth="150"/>
                    
                    <DataGridTextColumn Header="Customer Code" 
                                       Binding="{Binding Customer.CustomerCode}" 
                                       Width="120"/>
                    
                    <DataGridTextColumn Header="Bill Month/Year" 
                                       Width="120">
                        <DataGridTextColumn.Binding>
                            <MultiBinding StringFormat="{}{0:D2}/{1}">
                                <Binding Path="BillingMonth"/>
                                <Binding Path="BillingYear"/>
                            </MultiBinding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Bill Date" 
                                       Binding="{Binding BillDate, StringFormat=dd/MM/yyyy}" 
                                       Width="100"/>
                    
                    <DataGridTextColumn Header="Due Date" 
                                       Binding="{Binding DueDate, StringFormat=dd/MM/yyyy}" 
                                       Width="100"/>
                    
                    <DataGridTextColumn Header="Bill Amount" 
                                       Binding="{Binding BillAmount, StringFormat='Rs. {0:N2}'}" 
                                       Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Total Amount" 
                                       Binding="{Binding TotalAmount, StringFormat='Rs. {0:N2}'}" 
                                       Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Amount Paid" 
                                       Binding="{Binding AmountPaid, StringFormat='Rs. {0:N2}'}" 
                                       Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Balance" 
                                       Binding="{Binding BalanceAmount, StringFormat='Rs. {0:N2}'}" 
                                       Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Payment Status" 
                                       Binding="{Binding PaymentStatus}" 
                                       Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="Paid">
                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                    </Trigger>
                                    <Trigger Property="Text" Value="Pending">
                                        <Setter Property="Foreground" Value="#FF9800"/>
                                    </Trigger>
                                    <Trigger Property="Text" Value="Partial">
                                        <Setter Property="Foreground" Value="#2196F3"/>
                                    </Trigger>
                                    <Trigger Property="Text" Value="Overdue">
                                        <Setter Property="Foreground" Value="#D32F2F"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTemplateColumn Header="Payment Method" Width="160" SortMemberPath="PaymentMethod">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock VerticalAlignment="Center" Padding="4,0">
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource PaymentMethodDisplayConverter}">
                                            <Binding Path="PaymentMethod"/>
                                            <Binding Path="RecoveryPerson.PersonName"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTextColumn Header="Created By" 
                                       Binding="{Binding CreatedByUser.FullName}" 
                                       Width="150"/>
                    
                    <DataGridTextColumn Header="Last Modified By" 
                                       Binding="{Binding LastModifiedByUser.FullName}" 
                                       Width="150"/>
                    
                    <DataGridTextColumn Header="Last Modified Date" 
                                       Binding="{Binding LastModifiedDate, StringFormat=dd/MM/yyyy HH:mm}" 
                                       Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="White"
                Padding="20,10"
                BorderThickness="0,1,0,0"
                BorderBrush="#E0E0E0">
            <Grid>
                <TextBlock x:Name="StatusText"
                          Text="Ready"
                          FontSize="12"
                          Foreground="#666666"
                          VerticalAlignment="Center"/>
                
                <TextBlock x:Name="RecordCountText"
                          Text="Total Records: 0"
                          FontSize="12"
                          Foreground="#666666"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Page>
