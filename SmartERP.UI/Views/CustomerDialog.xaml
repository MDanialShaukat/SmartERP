<Window x:Class="SmartERP.UI.Views.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Customer"
        Height="650"
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SaveButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#757575"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#007ACC" 
                Padding="20,15">
            <TextBlock x:Name="DialogTitle"
                      Text="Add New Customer"
                      FontSize="20"
                      FontWeight="Bold"
                      Foreground="White"/>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="30,20">
            <StackPanel>
                <!-- Customer Code and Name -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Customer Code *" Style="{StaticResource LabelStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="CustomerCodeTextBox" Grid.Column="0"/>
                            <Button x:Name="GenerateCodeButton"
                                   Grid.Column="1"
                                   Content="🔄 Generate"
                                   Style="{StaticResource ActionButtonStyle}"
                                   Margin="5,0,0,0"
                                   Padding="10,8"
                                   Height="35"
                                   Click="GenerateCodeButton_Click"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Customer Name *" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="CustomerNameTextBox"/>
                    </StackPanel>
                </Grid>

                <!-- Phone and Email -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Phone Number *" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="PhoneNumberTextBox"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Email" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="EmailTextBox"/>
                    </StackPanel>
                </Grid>

                <!-- Address -->
                <TextBlock Text="Address *" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="AddressTextBox" 
                        Height="60"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalContentAlignment="Top"
                        Margin="0,0,0,15"/>

                <!-- City and Pin Code -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Area *" Style="{StaticResource LabelStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="AreaComboBox" 
                                     Grid.Column="0"
                                     DisplayMemberPath="AreaName"
                                     SelectedValuePath="Id"/>
                            <Button x:Name="AddAreaButton"
                                   Grid.Column="1"
                                   Content="➕ New"
                                   Style="{StaticResource ActionButtonStyle}"
                                   Margin="5,0,0,0"
                                   Padding="10,8"
                                   Height="35"
                                   Click="AddAreaButton_Click"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Pin Code" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="PinCodeTextBox"/>
                    </StackPanel>
                </Grid>

                <!-- Package Type and Amount -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Package Type" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="PackageTypeComboBox" IsEditable="True">
                            <ComboBoxItem Content="Basic"/>
                            <ComboBoxItem Content="Standard"/>
                            <ComboBoxItem Content="Premium"/>
                            <ComboBoxItem Content="Corporate"/>
                            <ComboBoxItem Content="Custom"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Package Amount (PKR)" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="PackageAmountTextBox"/>
                    </StackPanel>
                </Grid>

                <!-- Connection Type and Date -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Connection Type" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="ConnectionTypeComboBox" IsEditable="True">
                            <ComboBoxItem Content="Fiber"/>
                            <ComboBoxItem Content="Cable"/>
                            <ComboBoxItem Content="DSL"/>
                            <ComboBoxItem Content="Wireless"/>
                            <ComboBoxItem Content="Satellite"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Connection Date *" Style="{StaticResource LabelStyle}"/>
                        <DatePicker x:Name="ConnectionDatePicker"/>
                    </StackPanel>
                </Grid>

                <!-- Outstanding Balance -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Outstanding Balance (PKR)" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="OutstandingBalanceTextBox" Text="0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" VerticalAlignment="Bottom">
                        <CheckBox x:Name="IsActiveCheckBox" 
                                 Content="Active Customer" 
                                 IsChecked="True"
                                 Margin="0,0,0,8"/>
                    </StackPanel>
                </Grid>

                <!-- Additional Details -->
                <TextBlock Text="Additional Details" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="AdditionalDetailsTextBox" 
                        Height="60"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalContentAlignment="Top"
                        Margin="0,0,0,15"/>

                <!-- Notes -->
                <TextBlock Text="Notes" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="NotesTextBox" 
                        Height="60"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalContentAlignment="Top"
                        Margin="0,0,0,15"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" 
                Background="White"
                BorderThickness="0,1,0,0"
                BorderBrush="#E0E0E0"
                Padding="20,15">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right">
                <Button Content="✅ Save" 
                       Style="{StaticResource SaveButtonStyle}"
                       Click="SaveButton_Click"/>
                <Button Content="❎ Cancel" 
                       Style="{StaticResource CancelButtonStyle}"
                       Click="CancelButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
