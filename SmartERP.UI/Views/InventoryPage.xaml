<Page x:Class="SmartERP.UI.Views.InventoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartERP.UI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InventoryPage">

    <Page.Resources>
        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- DataGrid Header Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#005A9E"/>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AddButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#D32F2F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search and Action Bar -->
        <Border Grid.Row="0" 
                Background="White" 
                Padding="20"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Search:" 
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"
                              FontSize="14"/>
                    <TextBox x:Name="SearchTextBox"
                            Width="300"
                            Height="40"
                            Padding="10"
                            FontSize="13"
                            VerticalContentAlignment="Center"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"/>
                    <Button Content="🔍 Search"
                           Style="{StaticResource ActionButtonStyle}"
                           Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="➕ Add New"
                           Style="{StaticResource AddButtonStyle}"/>
                    <Button Content="✏️ Edit"
                           Style="{StaticResource ActionButtonStyle}"/>
                    <Button Content="🗑️ Delete"
                           Style="{StaticResource DeleteButtonStyle}"/>
                    <Button Content="🔄 Refresh"
                           Style="{StaticResource ActionButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="1" 
                Background="White"
                Margin="20"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="5">
            <DataGrid x:Name="InventoryDataGrid"
                     Margin="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                       Binding="{Binding Id}" 
                                       Width="60"
                                       IsReadOnly="True"/>
                    
                    <DataGridTextColumn Header="Item Name" 
                                       Binding="{Binding ItemName}" 
                                       Width="*"
                                       MinWidth="150"/>
                    
                    <DataGridTextColumn Header="Category" 
                                       Binding="{Binding Category}" 
                                       Width="120"/>
                    
                    <DataGridTextColumn Header="Unit" 
                                       Binding="{Binding Unit}" 
                                       Width="80"/>
                    
                    <DataGridTextColumn Header="Purchase Price" 
                                       Binding="{Binding PurchasePrice, StringFormat=C2}" 
                                       Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Purchased" 
                                       Binding="{Binding QuantityPurchased}" 
                                       Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Used" 
                                       Binding="{Binding QuantityUsed}" 
                                       Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Remaining" 
                                       Binding="{Binding QuantityRemaining}" 
                                       Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Supplier" 
                                       Binding="{Binding Supplier}" 
                                       Width="150"/>
                    
                    <DataGridTextColumn Header="Purchase Date" 
                                       Binding="{Binding PurchaseDate, StringFormat=dd/MM/yyyy}" 
                                       Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="White"
                Padding="20,10"
                BorderThickness="0,1,0,0"
                BorderBrush="#E0E0E0">
            <Grid>
                <TextBlock x:Name="StatusText"
                          Text="Ready"
                          FontSize="12"
                          Foreground="#666666"
                          VerticalAlignment="Center"/>
                
                <TextBlock x:Name="RecordCountText"
                          Text="Total Records: 0"
                          FontSize="12"
                          Foreground="#666666"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Page>
