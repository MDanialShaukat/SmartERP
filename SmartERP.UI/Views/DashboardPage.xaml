<Page x:Class="SmartERP.UI.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartERP.UI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DashboardPage">

    <Page.Resources>
        <!-- Metric Card Style -->
        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#CCCCCC" ShadowDepth="2" BlurRadius="10" Opacity="0.5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Quick Action Card Style -->
        <Style x:Key="QuickActionCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Icon Style -->
        <Style x:Key="IconTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#F5F5F5">
        <StackPanel Margin="20">
            <!-- Welcome Header -->
            <Border Background="White"
                   CornerRadius="8"
                   Padding="25"
                   Margin="0,0,0,20"
                   BorderBrush="#E0E0E0"
                   BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock x:Name="WelcomeText"
                                  Text="Welcome back!"
                                  FontSize="28"
                                  FontWeight="SemiBold"
                                  Foreground="#333333"/>
                        <TextBlock x:Name="DateTimeText"
                                  Text="Today"
                                  FontSize="14"
                                  Foreground="#666666"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Border Background="#E3F2FD"
                               CornerRadius="5"
                               Padding="15,10"
                               Margin="5">
                            <StackPanel>
                                <TextBlock Text="Current Month"
                                          FontSize="11"
                                          Foreground="#666666"
                                          HorizontalAlignment="Center"/>
                                <TextBlock x:Name="CurrentMonthText"
                                          Text="January 2024"
                                          FontSize="14"
                                          FontWeight="SemiBold"
                                          Foreground="#007ACC"
                                          HorizontalAlignment="Center"
                                          Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Key Metrics Cards -->
            <TextBlock Text="Key Metrics"
                      FontSize="20"
                      FontWeight="SemiBold"
                      Foreground="#333333"
                      Margin="10,0,0,15"/>

            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Customers Card -->
                <Border Grid.Column="0" Style="{StaticResource MetricCardStyle}">
                    <StackPanel>
                        <Ellipse Width="50" Height="50" Fill="#007ACC" Margin="0,0,0,10">
                            <Ellipse.OpacityMask>
                                <VisualBrush>
                                    <VisualBrush.Visual>
                                        <Grid>
                                            <TextBlock Text="&#xE125;" FontFamily="Segoe MDL2 Assets" FontSize="32" 
                                                      Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Grid>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Ellipse.OpacityMask>
                        </Ellipse>
                        <TextBlock Text="CUSTOMERS" FontFamily="Segoe UI" FontSize="32" FontWeight="Bold" 
                                  Foreground="#007ACC" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Total Customers"
                                  FontSize="13"
                                  Foreground="#666666"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,5"/>
                        <TextBlock x:Name="TotalCustomersText"
                                  Text="0"
                                  FontSize="32"
                                  FontWeight="Bold"
                                  Foreground="#007ACC"
                                  HorizontalAlignment="Center"/>
                        <TextBlock x:Name="ActiveCustomersText"
                                  Text="0 active"
                                  FontSize="11"
                                  Foreground="#4CAF50"
                                  HorizontalAlignment="Center"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- This Month Revenue Card -->
                <Border Grid.Column="1" Style="{StaticResource MetricCardStyle}">
                    <StackPanel>
                        <Ellipse Width="50" Height="50" Fill="#4CAF50" Margin="0,0,0,10">
                            <Ellipse.OpacityMask>
                                <VisualBrush>
                                    <VisualBrush.Visual>
                                        <Grid>
                                            <TextBlock Text="&#xE8D4;" FontFamily="Segoe MDL2 Assets" FontSize="32" 
                                                      Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Grid>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Ellipse.OpacityMask>
                        </Ellipse>
                        <TextBlock Text="REVENUE" FontFamily="Segoe UI" FontSize="32" FontWeight="Bold" 
                                  Foreground="#4CAF50" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="This Month Revenue"
                                  FontSize="13"
                                  Foreground="#666666"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,5"/>
                        <TextBlock x:Name="MonthlyRevenueText"
                                  Text="Rs. 0"
                                  FontSize="32"
                                  FontWeight="Bold"
                                  Foreground="#4CAF50"
                                  HorizontalAlignment="Center"/>
                        <TextBlock x:Name="MonthlyBillsText"
                                  Text="0 bills"
                                  FontSize="11"
                                  Foreground="#666666"
                                  HorizontalAlignment="Center"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Outstanding Amount Card -->
                <Border Grid.Column="2" Style="{StaticResource MetricCardStyle}">
                    <StackPanel>
                        <Ellipse Width="50" Height="50" Fill="#FF9800" Margin="0,0,0,10">
                            <Ellipse.OpacityMask>
                                <VisualBrush>
                                    <VisualBrush.Visual>
                                        <Grid>
                                            <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" FontSize="32" 
                                                      Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Grid>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Ellipse.OpacityMask>
                        </Ellipse>
                        <TextBlock Text="PENDING" FontFamily="Segoe UI" FontSize="32" FontWeight="Bold" 
                                  Foreground="#FF9800" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Outstanding"
                                  FontSize="13"
                                  Foreground="#666666"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,5"/>
                        <TextBlock x:Name="OutstandingAmountText"
                                  Text="Rs. 0"
                                  FontSize="32"
                                  FontWeight="Bold"
                                  Foreground="#FF9800"
                                  HorizontalAlignment="Center"/>
                        <TextBlock x:Name="OverdueBillsText"
                                  Text="0 overdue"
                                  FontSize="11"
                                  Foreground="#D32F2F"
                                  HorizontalAlignment="Center"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Low Stock Items Card -->
                <Border Grid.Column="3" Style="{StaticResource MetricCardStyle}">
                    <StackPanel>
                        <Ellipse Width="50" Height="50" Fill="#D32F2F" Margin="0,0,0,10">
                            <Ellipse.OpacityMask>
                                <VisualBrush>
                                    <VisualBrush.Visual>
                                        <Grid>
                                            <TextBlock Text="&#xE7B8;" FontFamily="Segoe MDL2 Assets" FontSize="32" 
                                                      Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Grid>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Ellipse.OpacityMask>
                        </Ellipse>
                        <TextBlock Text="STOCK" FontFamily="Segoe UI" FontSize="32" FontWeight="Bold" 
                                  Foreground="#D32F2F" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Low Stock Alert"
                                  FontSize="13"
                                  Foreground="#666666"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,5"/>
                        <TextBlock x:Name="LowStockItemsText"
                                  Text="0"
                                  FontSize="32"
                                  FontWeight="Bold"
                                  Foreground="#D32F2F"
                                  HorizontalAlignment="Center"/>
                        <TextBlock x:Name="InventoryValueText"
                                  Text="Rs. 0 total value"
                                  FontSize="11"
                                  Foreground="#666666"
                                  HorizontalAlignment="Center"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Recent Activity and Quick Actions Row -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Recent Activity -->
                <Border Grid.Column="0" 
                       Background="White"
                       CornerRadius="8"
                       Padding="20"
                       Margin="10,0,10,0"
                       BorderBrush="#E0E0E0"
                       BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <TextBlock Text="Recent Overdue Bills"
                                      FontSize="18"
                                      FontWeight="SemiBold"
                                      Foreground="#333333"/>
                            <Button Content="View All"
                                   HorizontalAlignment="Right"
                                   Background="Transparent"
                                   BorderBrush="Transparent"
                                   Foreground="#007ACC"
                                   FontSize="13"
                                   Cursor="Hand"
                                   Click="ViewAllOverdue_Click"/>
                        </Grid>

                        <DataGrid x:Name="RecentOverdueGrid"
                                 AutoGenerateColumns="False"
                                 IsReadOnly="True"
                                 Background="Transparent"
                                 BorderBrush="Transparent"
                                 BorderThickness="0"
                                 RowBackground="White"
                                 AlternatingRowBackground="#F9F9F9"
                                 GridLinesVisibility="Horizontal"
                                 HorizontalGridLinesBrush="#E0E0E0"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="False"
                                 SelectionMode="Single"
                                 SelectionUnit="FullRow"
                                 HeadersVisibility="Column"
                                 FontSize="12"
                                 MaxHeight="250">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                    <Setter Property="Foreground" Value="#333333"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="8,5"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Bill Number" Binding="{Binding BillNumber}" Width="120"/>
                                <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="*"/>
                                <DataGridTextColumn Header="Amount" Binding="{Binding Balance, StringFormat='Rs. {0:N2}'}" Width="100"/>
                                <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                                <DataGridTextColumn Header="Days Overdue" Binding="{Binding DaysOverdue}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#D32F2F"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <TextBlock x:Name="NoOverdueText"
                                  Text="No overdue bills. Great job!"
                                  FontSize="14"
                                  Foreground="#4CAF50"
                                  HorizontalAlignment="Center"
                                  Margin="0,20,0,0"
                                  Visibility="Collapsed"/>
                    </StackPanel>
                </Border>

                <!-- Quick Actions -->
                <Border Grid.Column="1" 
                       Background="White"
                       CornerRadius="8"
                       Padding="20"
                       Margin="0"
                       BorderBrush="#E0E0E0"
                       BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Quick Actions"
                                  FontSize="18"
                                  FontWeight="SemiBold"
                                  Foreground="#333333"
                                  Margin="0,0,0,15"/>

                        <Border Style="{StaticResource QuickActionCardStyle}"
                               MouseLeftButtonDown="AddBill_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="0,0,15,0" Foreground="#4CAF50"/>
                                <StackPanel>
                                    <TextBlock Text="Add New Bill"
                                              FontSize="14"
                                              FontWeight="SemiBold"
                                              Foreground="#333333"/>
                                    <TextBlock Text="Create billing entry"
                                              FontSize="11"
                                              Foreground="#666666"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource QuickActionCardStyle}"
                               MouseLeftButtonDown="AddCustomer_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8FA;" FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="0,0,15,0" Foreground="#007ACC"/>
                                <StackPanel>
                                    <TextBlock Text="Add Customer"
                                              FontSize="14"
                                              FontWeight="SemiBold"
                                              Foreground="#333333"/>
                                    <TextBlock Text="Register new customer"
                                              FontSize="11"
                                              Foreground="#666666"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource QuickActionCardStyle}"
                               MouseLeftButtonDown="AddInventory_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE7B8;" FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="0,0,15,0" Foreground="#FF9800"/>
                                <StackPanel>
                                    <TextBlock Text="Add Inventory"
                                              FontSize="14"
                                              FontWeight="SemiBold"
                                              Foreground="#333333"/>
                                    <TextBlock Text="Stock management"
                                              FontSize="11"
                                              Foreground="#666666"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource QuickActionCardStyle}"
                               MouseLeftButtonDown="ViewReports_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="0,0,15,0" Foreground="#9C27B0"/>
                                <StackPanel>
                                    <TextBlock Text="View Reports"
                                              FontSize="14"
                                              FontWeight="SemiBold"
                                              Foreground="#333333"/>
                                    <TextBlock Text="Analytics and insights"
                                              FontSize="11"
                                              Foreground="#666666"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- System Status -->
            <Border Background="White"
                   CornerRadius="8"
                   Padding="20"
                   Margin="10,0,10,0"
                   BorderBrush="#E0E0E0"
                   BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="System Status"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="#333333"
                                  Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Ellipse Width="8" Height="8" Fill="#4CAF50" Margin="0,0,10,0"/>
                            <TextBlock Text="Database: Connected"
                                      FontSize="12"
                                      Foreground="#666666"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Ellipse Width="8" Height="8" Fill="#4CAF50" Margin="0,0,10,0"/>
                            <TextBlock x:Name="UserCountText"
                                      Text="Active Users: 0"
                                      FontSize="12"
                                      Foreground="#666666"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Payment Summary"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="#333333"
                                  Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Paid Bills:"
                                      FontSize="12"
                                      Foreground="#666666"
                                      Width="80"/>
                            <TextBlock x:Name="PaidBillsCountText"
                                      Text="0"
                                      FontSize="12"
                                      FontWeight="SemiBold"
                                      Foreground="#4CAF50"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Pending:"
                                      FontSize="12"
                                      Foreground="#666666"
                                      Width="80"/>
                            <TextBlock x:Name="PendingBillsCountText"
                                      Text="0"
                                      FontSize="12"
                                      FontWeight="SemiBold"
                                      Foreground="#FF9800"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Inventory Summary"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="#333333"
                                  Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Total Items:"
                                      FontSize="12"
                                      Foreground="#666666"
                                      Width="80"/>
                            <TextBlock x:Name="TotalItemsText"
                                      Text="0"
                                      FontSize="12"
                                      FontWeight="SemiBold"
                                      Foreground="#007ACC"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Low Stock:"
                                      FontSize="12"
                                      Foreground="#666666"
                                      Width="80"/>
                            <TextBlock x:Name="LowStockCountText"
                                      Text="0"
                                      FontSize="12"
                                      FontWeight="SemiBold"
                                      Foreground="#D32F2F"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
