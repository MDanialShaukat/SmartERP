<Page x:Class="SmartERP.UI.Views.CustomerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartERP.UI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerPage">

    <Page.Resources>
        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- DataGrid Header Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#005A9E"/>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AddButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#D32F2F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search and Action Bar -->
        <Border Grid.Row="0" 
                Background="White" 
                Padding="20"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Search:" 
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"
                              FontSize="14"/>
                    <TextBox x:Name="SearchTextBox"
                            Width="300"
                            Height="40"
                            Padding="10"
                            FontSize="13"
                            VerticalContentAlignment="Center"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            KeyDown="SearchTextBox_KeyDown"/>
                    <Button Content="?? Search"
                           Style="{StaticResource ActionButtonStyle}"
                           Margin="10,0,0,0"
                           Click="SearchButton_Click"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="AddButton"
                           Content="? Add New"
                           Style="{StaticResource AddButtonStyle}"
                           Click="AddButton_Click"/>
                    <Button x:Name="EditButton"
                           Content="?? Edit"
                           Style="{StaticResource ActionButtonStyle}"
                           Click="EditButton_Click"/>
                    <Button x:Name="DeleteButton"
                           Content="??? Delete"
                           Style="{StaticResource DeleteButtonStyle}"
                           Click="DeleteButton_Click"/>
                    <Button x:Name="RefreshButton"
                           Content="?? Refresh"
                           Style="{StaticResource ActionButtonStyle}"
                           Click="RefreshButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="1" 
                Background="White"
                Margin="20"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="5">
            <DataGrid x:Name="CustomerDataGrid"
                     Margin="0"
                     SelectionChanged="CustomerDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                       Binding="{Binding Id}" 
                                       Width="50"
                                       IsReadOnly="True"/>
                    
                    <DataGridTextColumn Header="Customer Code" 
                                       Binding="{Binding CustomerCode}" 
                                       Width="120"/>
                    
                    <DataGridTextColumn Header="Customer Name" 
                                       Binding="{Binding CustomerName}" 
                                       Width="*"
                                       MinWidth="150"/>
                    
                    <DataGridTextColumn Header="Phone Number" 
                                       Binding="{Binding PhoneNumber}" 
                                       Width="120"/>
                    
                    <DataGridTextColumn Header="Email" 
                                       Binding="{Binding Email}" 
                                       Width="180"/>
                    
                    <DataGridTextColumn Header="City" 
                                       Binding="{Binding City}" 
                                       Width="100"/>
                    
                    <DataGridTextColumn Header="Package Type" 
                                       Binding="{Binding PackageType}" 
                                       Width="120"/>
                    
                    <DataGridTextColumn Header="Package Amount (PKR)" 
                                       Binding="{Binding PackageAmount, StringFormat='Rs. {0:N2}'}" 
                                       Width="160">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Outstanding (PKR)" 
                                       Binding="{Binding OutstandingBalance, StringFormat='Rs. {0:N2}'}" 
                                       Width="140">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Connection Date" 
                                       Binding="{Binding ConnectionDate, StringFormat=dd/MM/yyyy}" 
                                       Width="120"/>
                    
                    <DataGridCheckBoxColumn Header="Active" 
                                           Binding="{Binding IsActive}" 
                                           Width="70"
                                           IsReadOnly="True">
                        <DataGridCheckBoxColumn.ElementStyle>
                            <Style TargetType="CheckBox">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="IsHitTestVisible" Value="False"/>
                            </Style>
                        </DataGridCheckBoxColumn.ElementStyle>
                    </DataGridCheckBoxColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="White"
                Padding="20,10"
                BorderThickness="0,1,0,0"
                BorderBrush="#E0E0E0">
            <Grid>
                <TextBlock x:Name="StatusText"
                          Text="Ready"
                          FontSize="12"
                          Foreground="#666666"
                          VerticalAlignment="Center"/>
                
                <TextBlock x:Name="RecordCountText"
                          Text="Total Records: 0"
                          FontSize="12"
                          Foreground="#666666"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Page>
