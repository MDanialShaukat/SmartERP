<Window x:Class="SmartERP.UI.Views.InventoryAssignmentHistoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assignment History"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- DataGrid Header Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#005A9E"/>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#757575"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#007ACC" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                          x:Name="DialogTitle"
                          Text="Assignment History - [Item Name]"
                          FontSize="20"
                          FontWeight="Bold"
                          Foreground="White"/>

                <TextBlock Grid.Column="1"
                          x:Name="TotalAssignmentsTextBlock"
                          Text="Total Assignments: 0"
                          FontSize="14"
                          Foreground="White"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="1" 
                Background="White"
                Margin="20"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="5">
            <DataGrid x:Name="AssignmentDataGrid"
                     Margin="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Assignment ID" 
                                       Binding="{Binding Id}" 
                                       Width="80"
                                       IsReadOnly="True"/>
                    
                    <DataGridTextColumn Header="Assigned To" 
                                       Binding="{Binding AssignedToUser.FullName}" 
                                       Width="*"
                                       MinWidth="150"
                                       IsReadOnly="True"/>
                    
                    <DataGridTextColumn Header="Quantity" 
                                       Binding="{Binding QuantityAssigned}" 
                                       Width="100"
                                       IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Assignment Date" 
                                       Binding="{Binding AssignmentDate, StringFormat=dd/MM/yyyy HH:mm}" 
                                       Width="160"
                                       IsReadOnly="True"/>
                    
                    <DataGridTextColumn Header="Assigned By" 
                                       Binding="{Binding CreatedByUser.FullName}" 
                                       Width="150"
                                       IsReadOnly="True"/>
                    
                    <DataGridTextColumn Header="Remarks" 
                                       Binding="{Binding Remarks}" 
                                       Width="*"
                                       MinWidth="200"
                                       IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="White"
                BorderThickness="0,1,0,0"
                BorderBrush="#E0E0E0"
                Padding="20,15">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right">
                <Button Content="âŒ Close" 
                       Style="{StaticResource CloseButtonStyle}"
                       Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
