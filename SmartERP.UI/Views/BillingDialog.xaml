<Window x:Class="SmartERP.UI.Views.BillingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Billing"
        Height="700"
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="SaveButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#757575"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GenerateButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#007ACC" 
                Padding="20,15">
            <TextBlock x:Name="DialogTitle"
                      Text="Add New Billing"
                      FontSize="20"
                      FontWeight="Bold"
                      Foreground="White"/>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="30,20">
            <StackPanel>
                <!-- Bill Number -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Bill Number *" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="BillNumberTextBox"/>
                    </StackPanel>

                    <Button Grid.Column="2" 
                           Content="ðŸ”„ Generate"
                           Style="{StaticResource GenerateButtonStyle}"
                           Click="GenerateBillNumberButton_Click"
                           VerticalAlignment="Bottom"/>
                </Grid>

                <!-- Area Selection -->
                <TextBlock Text="Area" Style="{StaticResource LabelStyle}"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox x:Name="AreaComboBox" 
                             Grid.Column="0"
                             DisplayMemberPath="AreaName"
                             SelectedValuePath="Id"
                             SelectionChanged="AreaComboBox_SelectionChanged"/>

                    <Button Grid.Column="2"
                           Content="âœ– Clear"
                           Style="{StaticResource GenerateButtonStyle}"
                           Click="ClearAreaButton_Click"
                           Height="35"
                           VerticalAlignment="Top"/>
                </Grid>

                <!-- Customer Selection -->
                <TextBlock Text="Customer *" Style="{StaticResource LabelStyle}"/>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="CustomerSearchBox"
                            Grid.Column="0"
                            Height="35"
                            Padding="10,8"
                            FontSize="13"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            TextChanged="CustomerSearchBox_TextChanged"
                            VerticalContentAlignment="Center"/>

                    <Button Grid.Column="2"
                           Content="âœ– Clear"
                           Style="{StaticResource GenerateButtonStyle}"
                           Click="ClearCustomerSearchButton_Click"
                           Height="35"
                           VerticalAlignment="Top"/>
                </Grid>

                <TextBlock Text="Search by Name or Code" 
                          Style="{StaticResource LabelStyle}"
                          FontSize="10"
                          Margin="0,2,0,8"
                          Foreground="#666666"/>

                <!-- Customer Dropdown -->
                <ComboBox x:Name="CustomerComboBox" 
                         DisplayMemberPath="CustomerName"
                         SelectionChanged="CustomerComboBox_SelectionChanged"
                         Margin="0,0,0,15"/>

                <!-- Billing Month and Year -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Billing Month *" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="BillingMonthComboBox">
                            <ComboBoxItem Content="January" Tag="1"/>
                            <ComboBoxItem Content="February" Tag="2"/>
                            <ComboBoxItem Content="March" Tag="3"/>
                            <ComboBoxItem Content="April" Tag="4"/>
                            <ComboBoxItem Content="May" Tag="5"/>
                            <ComboBoxItem Content="June" Tag="6"/>
                            <ComboBoxItem Content="July" Tag="7"/>
                            <ComboBoxItem Content="August" Tag="8"/>
                            <ComboBoxItem Content="September" Tag="9"/>
                            <ComboBoxItem Content="October" Tag="10"/>
                            <ComboBoxItem Content="November" Tag="11"/>
                            <ComboBoxItem Content="December" Tag="12"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Billing Year *" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="BillingYearComboBox"/>
                    </StackPanel>
                </Grid>

                <!-- Bill Date and Due Date -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Bill Date *" Style="{StaticResource LabelStyle}"/>
                        <DatePicker x:Name="BillDatePicker"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Due Date *" Style="{StaticResource LabelStyle}"/>
                        <DatePicker x:Name="DueDatePicker"/>
                    </StackPanel>
                </Grid>

                <!-- Bill Amount and Previous Due -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Bill Amount (PKR) *" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="BillAmountTextBox" TextChanged="CalculateTotals"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Previous Due (PKR)" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="PreviousDueTextBox" Text="0" TextChanged="CalculateTotals"/>
                    </StackPanel>
                </Grid>

                <!-- Total Amount (Calculated) -->
                <Border Background="#E3F2FD" 
                       Padding="15" 
                       CornerRadius="5"
                       Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Total Amount (PKR)" 
                                  Style="{StaticResource LabelStyle}"
                                  Foreground="#1976D2"/>
                        <TextBlock x:Name="TotalAmountText" 
                                  Text="Rs. 0.00"
                                  FontSize="20"
                                  FontWeight="Bold"
                                  Foreground="#1976D2"/>
                    </StackPanel>
                </Border>

                <!-- Amount Paid -->
                <TextBlock Text="Amount Paid (PKR)" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="AmountPaidTextBox" 
                        Text="0" 
                        TextChanged="CalculateTotals"
                        Margin="0,0,0,15"/>

                <!-- Balance Amount (Calculated) -->
                <Border Background="#FFF3E0" 
                       Padding="15" 
                       CornerRadius="5"
                       Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Balance Amount (PKR)" 
                                  Style="{StaticResource LabelStyle}"
                                  Foreground="#F57C00"/>
                        <TextBlock x:Name="BalanceAmountText" 
                                  Text="Rs. 0.00"
                                  FontSize="20"
                                  FontWeight="Bold"
                                  Foreground="#F57C00"/>
                    </StackPanel>
                </Border>

                <!-- Payment Status -->
                <TextBlock Text="Payment Status *" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="PaymentStatusComboBox" Margin="0,0,0,15">
                    <ComboBoxItem Content="Pending" IsSelected="True"/>
                    <ComboBoxItem Content="Paid"/>
                    <ComboBoxItem Content="Partial"/>
                    <ComboBoxItem Content="Overdue"/>
                </ComboBox>

                <!-- Payment Method and Transaction Reference -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Payment Method" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="PaymentMethodComboBox" 
                                 IsEditable="True"
                                 SelectionChanged="PaymentMethodComboBox_SelectionChanged">
                            <ComboBoxItem Content="Cash"/>
                            <ComboBoxItem Content="UPI"/>
                            <ComboBoxItem Content="Bank Transfer"/>
                            <ComboBoxItem Content="Credit Card"/>
                            <ComboBoxItem Content="Debit Card"/>
                            <ComboBoxItem Content="Cheque"/>
                            <ComboBoxItem Content="Online Payment"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Transaction Reference" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="TransactionReferenceTextBox"/>
                    </StackPanel>
                </Grid>

                <!-- Recovery Person (Visible only for Cash payment) -->
                <Border x:Name="RecoveryPersonPanel"
                       Background="#FFF9E6"
                       Padding="15"
                       CornerRadius="5"
                       Margin="0,0,0,15"
                       BorderBrush="#FFE082"
                       BorderThickness="1"
                       Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Recovery Person" Style="{StaticResource LabelStyle}"/>
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox x:Name="RecoveryPersonComboBox"
                                     Grid.Column="0"
                                     DisplayMemberPath="PersonName"
                                     SelectedValuePath="Id"
                                     Margin="0,0,0,0"/>

                            <Button Grid.Column="2"
                                   Content="âž• New"
                                   Style="{StaticResource GenerateButtonStyle}"
                                   Click="AddRecoveryPersonButton_Click"
                                   Height="35"
                                   VerticalAlignment="Top"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Payment Date -->
                <TextBlock Text="Payment Date" Style="{StaticResource LabelStyle}"/>
                <DatePicker x:Name="PaymentDatePicker" Margin="0,0,0,15"/>

                <!-- Notes -->
                <TextBlock Text="Notes" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="NotesTextBox" 
                        Height="80"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalContentAlignment="Top"
                        Margin="0,0,0,15"/>

                <!-- Audit Information (Edit Mode Only) -->
                <Border x:Name="AuditInfoPanel"
                       Background="#F5F5F5" 
                       Padding="15" 
                       CornerRadius="5"
                       Margin="0,0,0,15"
                       Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Audit Information" 
                                  FontSize="14"
                                  FontWeight="Bold"
                                  Foreground="#666666"
                                  Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Created By:" FontSize="12" Foreground="#666666"/>
                                <TextBlock x:Name="CreatedByText" 
                                          Text="-" 
                                          FontSize="13"
                                          FontWeight="SemiBold"
                                          Margin="0,2,0,5"/>
                                
                                <TextBlock Text="Created Date:" FontSize="12" Foreground="#666666"/>
                                <TextBlock x:Name="CreatedDateText" 
                                          Text="-" 
                                          FontSize="13"
                                          Margin="0,2,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Last Modified By:" FontSize="12" Foreground="#666666"/>
                                <TextBlock x:Name="LastModifiedByText" 
                                          Text="-" 
                                          FontSize="13"
                                          FontWeight="SemiBold"
                                          Margin="0,2,0,5"/>
                                
                                <TextBlock Text="Last Modified Date:" FontSize="12" Foreground="#666666"/>
                                <TextBlock x:Name="LastModifiedDateText" 
                                          Text="-" 
                                          FontSize="13"
                                          Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" 
                Background="White"
                BorderThickness="0,1,0,0"
                BorderBrush="#E0E0E0"
                Padding="20,15">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right">
                <Button Content="âœ… Save" 
                       Style="{StaticResource SaveButtonStyle}"
                       Click="SaveButton_Click"/>
                <Button Content="âŽ Cancel" 
                       Style="{StaticResource CancelButtonStyle}"
                       Click="CancelButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
